icons = "awesome"

[[block]]
block = "custom"
command = 'public-ip-info'
interval = 30

[theme]
name = "solarized-dark"
[theme.overrides]
idle_bg = "#1d1f21"
idle_fg = "#c5c8c6"
info_bg = "#3971ED"
info_fg = "#1d1f21"
good_bg = "#198844"
good_fg = "#1d1f21"
warning_bg = "#FBA922"
warning_fg = "#1d1f21"
critical_bg = "#CC342B"
critical_fg = "#1d1f21"

[[block]]
block = "focused_window"
max_width = 21

[[block]]
block = "docker"
interval = 2
format = "{running}/{total}"

[[block]]
block = "weather"
format = "{weather} in {location}@{temp}Â°C"
service = { name = "openweathermap", api_key="$OPENWEATHER_API_KEY", city_id = "$OPENWEATHER_CITY_ID", units = "metric" }

